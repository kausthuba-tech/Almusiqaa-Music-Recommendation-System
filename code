import numpy as np
import pandas as pd
import matplotlib.pyplot as plt 
import spotify
import os
import seaborn as sns
import plotly.express as px

spotify_data = pd.read_csv('data.csv')
data_genres=pd.read_csv('data_by_genres.csv')
data_year=pd.read_csv('data_by_year.csv')
print(spotify_data)
print(data_genres)
print(data_year)
data_year.info(verbose=True)
data_genres.info(verbose=True)
spotify_data.info(verbose=True)

sound_features = ['acousticness', 'danceability', 'energy', 'instrumentalness', 'liveness', 'valence']
fig = px.line(data_year, x='year', y=sound_features)
fig.show()

top10_genres = data_genres.nlargest(10, 'popularity')

fig = px.bar(top10_genres, x='genres', y=['valence', 'energy', 'danceability', 'acousticness'], barmode='group')
fig.show()

fitbit_data=pd.read_csv('heartrate_seconds2.csv')
print(fitbit_data)
fitbit_data.drop(labels=["Id","Time"],axis=1,inplace=False)

fitbit_data.info(verbose=True)

columns_titles = ["valence","value"]
df=fitbit_data.reindex(columns=columns_titles)

print(df)

df=pd.merge(spotify_data,df)
print(df)

